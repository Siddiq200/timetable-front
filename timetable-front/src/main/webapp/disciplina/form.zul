<?page contentType="text/html;charset=UTF-8"?>
<?init class="org.zkoss.zk.ui.util.Composition" arg0="/partials/zul/template.zul"?>
<?variable-resolver class="org.zkoss.zkplus.cdi.DelegatingVariableResolver"?>
<zk xmlns:n="native">
	<div self="@define(content)" class="container-fluid" apply="br.edu.ifma.csp.timetable.composer.ProfessorComposer">	
		
		<div>
			<n:h4>Manter Professor</n:h4>
		</div>
		
		<tabbox>
			<tabs>
				<tab label="Dados Pessoais" iconSclass="fa fa-user"/>
				<tab label="Preferências" iconSclass="fa fa-plus"/>
			</tabs>
			<tabpanels>
				
				<tabpanel>
				
					<div>
						<div class="form-group">
							<include src="/partials/zul/botoes.zul"/>
						</div>
						
						<div sclass="form-group">
							<label value="Siape" sclass="form-label" />
							<textbox id="siape" sclass="form-input"/>
						</div>
						
						<div sclass="form-group">
							<label value="Nome" sclass="form-label" />
							<textbox id="nome" sclass="form-input"/>
						</div>
						
						<div sclass="row">
							<div class="col-md-8">
								<div sclass="form-group">
									<label value="Endereço" sclass="form-label"/>
									<textbox width="100%" sclass="form-input" id="endereco"/>
								</div>
							</div>
							
							<div class="col-md-4">
								<div sclass="form-group">
									<label value="Telefone" sclass="form-label"/>
									<textbox width="100%" sclass="form-input" id="telefone"/>
								</div>
							</div>
						</div>
						
					</div>
					
				</tabpanel>
				
				<tabpanel>
				
					<listbox>
						<listhead>
							<listheader label="Código"/>
							<listheader label="Descrição"/>
						</listhead>
						<listitem>
							<listcell></listcell>
							<listcell></listcell>
						</listitem>
					</listbox>
				</tabpanel>
			</tabpanels>
		</tabbox>
		
		
	</div>
</zk>