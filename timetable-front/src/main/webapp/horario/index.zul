<?page title="Timetable - Horário" contentType="text/html;charset=UTF-8"?>
<?meta name="theme-color" content="#344760" ?>
<?init class="org.zkoss.zk.ui.util.Composition" arg0="/partials/zul/template.zul"?>
<zk xmlns:n="native">
	<div self="@define(content)" class="container-fluid" viewModel="@id('vm') @init('br.edu.ifma.csp.timetable.viewmodel.HorarioViewModel')">
		
		<div sclass="row">
		
			<div class="form-group">
				<n:h4 class="page-title"><span class="fa side fa-clock-o"/>Horário</n:h4>
			</div>
		
			<div class="form-group">
				<include src="/partials/zul/botoes.zul"/>
			</div>
			
			<div id="list" visible="@bind(vm.consultando)">
				<include src="list.zul"/>
			</div>
			
			<div id="form" visible="@bind(vm.editando)">
				<include src="form.zul"/>
			</div>
			
		</div>
			
	</div>
</zk>